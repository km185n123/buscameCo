<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Device.Activity.EditDevice"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="225dp">


        <ImageView
            android:id="@+id/img_device_edit"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="@drawable/producto_sin_imagen"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnChangeImageDevice"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="16dp"
            android:theme="@style/Theme.AppCompat"
            app:srcCompat="@drawable/ic_edit_white"
            />

    </FrameLayout>



    <android.support.design.widget.TextInputLayout
        android:layout_margin="10dp"
        style="@style/Register_TextInputLayout">

        <AutoCompleteTextView
            android:id="@+id/aliasDevice"
            android:inputType="textPersonName"
            android:hint="Alias"
            style="@style/Register_AutoCompleteTextView"/>

    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/btnEditDataDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="16dp"
        android:text="Guardar"
        android:background="@color/transparent"
        android:textColor="@color/colorPrimary"/>





</LinearLayout>